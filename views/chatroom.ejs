<!doctype html>
<html>
<head>
	<title>ワード人狼 焼肉鯖</title>
	<style>
		* { box-sizing: border-box; }

		html{
			background-color: #f3f3f3;
		}
		body{
			width: 1000px;
			min-height:100vh;
			margin: 0 auto;
			font-size:0;
			background-color: white;
		}

		header{
			font-size:16px;
			width:100%;
			height:40px;
			background-color: orange;
			margin-bottom: 10px;
			padding: 0px 10px;
		}

		header h1{
			font-size:24px;
			line-height: 40px;

			margin:0;
			padding:0;
			display:inline;
		}

		#second{
			font-weight: bold;
			font-size:20px;
		}
		#left{
			width: 750px;
			font-size:16px;
		}
		#right{
			width: 250px;
			font-size:16px;
			vertical-align: top;
		}
		#left, #right{
			display:inline-block;
		}
		#talk{
			height:100px;
		}
		.hide{
			visibility: hidden;			
		}

		#chat{
			width: 150px;
			height: 80px;
			vertical-align: bottom;
		}
		#message{
			width:500px;
			height: 80px;
			vertical-align: bottom;
		}

		#command{
			height:100px;
		}

		#command > div{
			display:none;
			text-align:center;
		}

		#command #command-login{
			display: block;
			text-align:center;
		}
		#discuss {
			width:100%;
			border-collapse: collapse;
		}
		td.name{
			width:180px;
			max-width: 180px;
		}
		.talk{
			width:570px;
			max-width: 570px;
			overflow:hidden;
		}

		.system {
			background-color:#e3e3e3;
		}

		.personal{
			background-color:pink;
		}

		.offline{
			color: red;
		}

		.vote{
			font-size:14px;
		}

		.votenum{
			background-color: orange;
			border-radius: 8px;
			padding:0px 4px;
			color:white;
			font-weight: bold;
		}

		#playerlist{
			margin:0;
			padding:0;
		}

		#playerlist li{
			list-style: none;
			margin: 0;
			padding:0;
		}

		#playerlist li:hover{
			background-color: #e3e3e3;
		}

		.red{color: red;}
		.pink{color: pink;}
		.orange{color: orange;}
		.yellow{color: yellow;}
		.green{color: green;}
		.skyblue{color: skyblue;}
		.blue{color: blue;}
		.indigo{color: indigo;}
		.purple{color: purple;}
		.black{color: black;}
	</style>
</head>
<body>
	<header>
		<h1>ワード人狼</h1>
		<span id="phase"></span><span id="timer"></span>
	</header>
	<div id="left">
		<div id="talk" class="hide">
			<textarea id="message" autocomplete="off" rows="5" cols="60" /></textarea>
			<input id="chat" type="button" value="発言">
		</div>
		<table id="discuss">
			<tbody></tbody>
		</table>
	</div>
	<div id="right">
		<div id="command">
			<div id="command-login">
				名前:
				<input id="name"><br>
				色：
				<select id="color">
					<option value="red">赤</option>
					<option value="pink">ピンク</option>
					<option value="orange">オレンジ</option>
					<option value="yellow">黄色</option>
					<option value="green">緑</option>
					<option value="skyblue">水色</option>
					<option value="blue">青</option>
					<option value="indigo">藍</option>
					<option value="purple">紫</option>
					<option value="black">黒</option>
				</select><br>
				<input id="enter" type="button" value="入室">      		
			</div>
			<div id="command-logout">
				<input type="button" value="退室" class="exit">				   		
			</div>
			<div id="command-gm">
				<input type="button" value="ゲーム開始" id="game-start">	
				<input type="button" value="退室" class="exit">	
			</div>
			<div id="command-setword">
				村:<input type="text" id="vword"><br>
				狼:<input type="text" id="wword"><br>
				<input type="button" id="game-setword" value="開始">
			</div>
			<div id="command-judge">
				<input type="button" value="正解(人狼勝利)" id="correct">
				<input type="button" value="残念(村人勝利)" id="incorrect">	
			</div>
		</div>
		<div id="player">
			<div id="playernum"></div>
			<ul id="playerlist"></ul>      	
		</div>

	</div>


	<!-- socket.ioをロードする -->
	<script>
		var me = {
			id: "<%= id %>",
		    name: null,
		    color: null,
		    isgm: false
		}
	</script>
	<script src="../socket.io/socket.io.js"></script>
	<script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
	<script src="javascripts/client.js"></script>

</body>
</html>